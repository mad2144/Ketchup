  <tr>
    <th>Pokemon 1</th>
    <th>Pokemon 2</th>
    <th>Started by</th>
  </tr>

<% @battles.each do |battle| %>
  <tr>
    <td><%= Pokemon.find(battle.p1).name %></td>
    <td><%= Pokemon.find(battle.p2).name %></td>
    <td><%= battle.trainer.first_name %></td>
    <td><%= link_to 'Show', battle %></td>
    <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
    <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

