<p id="notice"><%= notice %></p>
<center>
<ul class="nav"><li class="nav-pill"><%= link_to 'Attack', '/pokemons/' + @battle.p1 + '/' + @battle.p2 + '/attack', :style => "font-size: 30px" %></li></ul>
<% p1 = Pokemon.find(@battle.p1) %>
<br style="clear: both" />
<% p2 = Pokemon.find(@battle.p2) %>
<div style="margin: auto 0; width: 80%">
<div style="float: left">
	
<div style="float: left; padding-top: 30px; margin-right: 20px">
<p>
  <b>HP:</b>
  <%= p1.HP %> / <%= p1.HP_MAX %>
</p>
<% if p1.fainted %>
<p style="color: red">
<b>Fainted</b>
</p>
<% end %>
<p>
  <b>ATK:</b>
  <%= p1.ATK %>
</p>
<p>
  <b>DEF:</b>
  <%= p1.DEF %>
</p>
<p>
  <b>SATK:</b>
  <%= p1.SATK %>
</p>
<p>
  <b>SDEF:</b>
  <%= p1.SDEF %>
</p>
<p>
  <b>SPD:</b>
  <%= p1.SPD %>
</p>
</div><%= image_tag p1.avatar.url, :size => "200x200", :style=> "float: right; margin-right: 20px" %>
</div>


<div style="float: left; margin-left: 100px;">
	<%= image_tag p2.avatar.url, :size => "200x200", :style=> "float: left; margin-right: 20px" %>
<div style="float: right; padding-top: 30px">
<p>
  <b>HP:</b>
  <%= p2.HP %> / <%= p2.HP_MAX %>
</p>
<% if p2.fainted %>
<p style="color: red">
<b>Fainted</b>
</p>
<% end %>
<p>
  <b>ATK:</b>
  <%= p2.ATK %>
</p>
<p>
  <b>DEF:</b>
  <%= p2.DEF %>
</p>
<p>
  <b>SATK:</b>
  <%= p2.SATK %>
</p>
<p>
  <b>SDEF:</b>
  <%= p2.SDEF %>
</p>
<p>
  <b>SPD:</b>
  <%= p2.SPD %>
</p>
</div>
</div>
</div>
</center>
</div>

